@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card auth-card">
    <div class="card-body text-center py-5">
        <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
        <h3 class="mt-3">Access Denied</h3>
        <p class="text-muted">You do not have permission to access this resource.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">
            <i class="bi bi-house me-1"></i>Go to Dashboard
        </a>
    </div>
</div>
