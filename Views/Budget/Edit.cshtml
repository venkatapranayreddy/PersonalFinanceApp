@model Budget
@{
    ViewData["Title"] = "Edit Budget";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit Budget</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="SpentAmount" />
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="CategoryId" class="form-label">Category *</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" disabled>
                            </select>
                            <input type="hidden" asp-for="CategoryId" />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Amount" class="form-label">Budget Amount *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Month" class="form-label">Month</label>
                            <input class="form-control" value="@(new DateTime(2000, Model.Month, 1).ToString("MMMM"))" disabled />
                            <input type="hidden" asp-for="Month" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Year" class="form-label">Year</label>
                            <input class="form-control" value="@Model.Year" disabled />
                            <input type="hidden" asp-for="Year" />
                        </div>

                        <!-- Current Status -->
                        <div class="col-md-12">
                            <div class="alert @(Model.IsOverBudget ? "alert-danger" : Model.IsNearLimit ? "alert-warning" : "alert-success")">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Current spending: <strong>@Model.SpentAmount.ToString("C")</strong></span>
                                    <span>@Model.PercentageUsed.ToString("F1")% of budget</span>
                                </div>
                                <div class="progress mt-2" style="height: 10px;">
                                    <div class="progress-bar @(Model.IsOverBudget ? "bg-danger" : Model.IsNearLimit ? "bg-warning" : "bg-success")"
                                         style="width: @Math.Min(Model.PercentageUsed, 100)%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-route-month="@Model.Month" asp-route-year="@Model.Year" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Update Budget
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
