@model List<Budget>
@{
    ViewData["Title"] = "Budgets";
    var selectedMonth = (int)ViewBag.SelectedMonth;
    var selectedYear = (int)ViewBag.SelectedYear;
    var totalBudget = (decimal)ViewBag.TotalBudget;
    var totalSpent = (decimal)ViewBag.TotalSpent;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Budgets</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Create Budget
    </a>
</div>

<!-- Month Selector -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Month</label>
                <select name="month" class="form-select">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == selectedMonth)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Year</label>
                <select name="year" class="form-select">
                    @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                    {
                        <option value="@y" selected="@(y == selectedYear)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-filter me-1"></i>Filter
                </button>
            </div>
            <div class="col-md-3 text-end">
                <div class="small text-muted">Budget: @totalBudget.ToString("C")</div>
                <div class="h5 mb-0 @(totalSpent > totalBudget ? "text-danger" : "text-success")">
                    Spent: @totalSpent.ToString("C")
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Overall Progress -->
@if (Model.Any())
{
    var overallPercentage = totalBudget > 0 ? (double)(totalSpent / totalBudget) * 100 : 0;
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
                <span>Overall Budget Progress</span>
                <span class="fw-bold">@overallPercentage.ToString("F1")%</span>
            </div>
            <div class="progress" style="height: 25px;">
                <div class="progress-bar @(overallPercentage > 100 ? "bg-danger" : overallPercentage > 80 ? "bg-warning" : "bg-success")"
                     style="width: @Math.Min(overallPercentage, 100)%">
                    @totalSpent.ToString("C") / @totalBudget.ToString("C")
                </div>
            </div>
        </div>
    </div>
}

<!-- Budget Cards -->
@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var budget in Model)
        {
            var statusClass = budget.IsOverBudget ? "over-budget" : budget.IsNearLimit ? "near-limit" : "under-budget";
            <div class="col-md-6 col-lg-4">
                <div class="card budget-card @statusClass h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <span class="category-badge" style="background-color: @(budget.Category?.Color)20; color: @(budget.Category?.Color)">
                                    <i class="bi @(budget.Category?.Icon ?? "bi-tag")"></i>
                                    @budget.Category?.Name
                                </span>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-link text-muted" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@budget.Id"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@budget.Id" method="post"
                                              onsubmit="return confirmDelete('Are you sure you want to delete this budget?')">
                                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-trash me-2"></i>Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Spent</span>
                                <span class="fw-bold @(budget.IsOverBudget ? "text-danger" : "")">
                                    @budget.SpentAmount.ToString("C") / @budget.Amount.ToString("C")
                                </span>
                            </div>
                            <div class="progress budget-progress mt-2">
                                <div class="progress-bar @(budget.IsOverBudget ? "bg-danger" : budget.IsNearLimit ? "bg-warning" : "bg-success")"
                                     style="width: @Math.Min(budget.PercentageUsed, 100)%"></div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between text-muted small">
                            <span>@budget.PercentageUsed.ToString("F0")% used</span>
                            <span>@budget.RemainingAmount.ToString("C") remaining</span>
                        </div>
                        @if (budget.IsOverBudget)
                        {
                            <div class="alert alert-danger mt-3 mb-0 py-2">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Over budget by @(Math.Abs(budget.RemainingAmount).ToString("C"))
                            </div>
                        }
                        else if (budget.IsNearLimit)
                        {
                            <div class="alert alert-warning mt-3 mb-0 py-2">
                                <i class="bi bi-exclamation-circle me-1"></i>
                                Approaching budget limit
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="empty-state">
                <i class="bi bi-pie-chart"></i>
                <h5>No budgets found</h5>
                <p>No budgets set for @(new DateTime(selectedYear, selectedMonth, 1).ToString("MMMM yyyy"))</p>
                <a asp-action="Create" class="btn btn-primary">Create your first budget</a>
            </div>
        </div>
    </div>
}
