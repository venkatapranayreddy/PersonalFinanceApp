@model List<Income>
@{
    ViewData["Title"] = "Income";
    var selectedMonth = (int)ViewBag.SelectedMonth;
    var selectedYear = (int)ViewBag.SelectedYear;
    var totalIncome = (decimal)ViewBag.TotalIncome;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-wallet me-2"></i>Income</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i>Add Income
    </a>
</div>

<!-- Month Selector -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Month</label>
                <select name="month" class="form-select">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == selectedMonth)">@(new DateTime(2000, i, 1).ToString("MMMM"))</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Year</label>
                <select name="year" class="form-select">
                    @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                    {
                        <option value="@y" selected="@(y == selectedYear)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-filter me-1"></i>Filter
                </button>
            </div>
            <div class="col-md-3 text-end">
                <div class="h4 mb-0 text-success">Total: @totalIncome.ToString("C")</div>
            </div>
        </form>
    </div>
</div>

<!-- Income Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Source</th>
                            <th>Category</th>
                            <th>Recurring</th>
                            <th class="text-end">Amount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in Model)
                        {
                            <tr>
                                <td>@income.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @income.Source
                                    @if (!string.IsNullOrEmpty(income.Notes))
                                    {
                                        <i class="bi bi-chat-dots text-muted ms-1" title="@income.Notes"></i>
                                    }
                                </td>
                                <td>
                                    <span class="category-badge" style="background-color: @(income.Category?.Color)20; color: @(income.Category?.Color)">
                                        <i class="bi @(income.Category?.Icon ?? "bi-tag")"></i>
                                        @income.Category?.Name
                                    </span>
                                </td>
                                <td>
                                    @if (income.IsRecurring)
                                    {
                                        <span class="badge bg-info">@income.RecurringFrequency</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end fw-bold text-success">@income.Amount.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@income.Id" class="btn btn-sm btn-outline-secondary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@income.Id" method="post" class="d-inline"
                                          onsubmit="return confirmDelete('Are you sure you want to delete this income?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h5>No income found</h5>
                <p>No income recorded for @(new DateTime(selectedYear, selectedMonth, 1).ToString("MMMM yyyy"))</p>
                <a asp-action="Create" class="btn btn-success">Add your first income</a>
            </div>
        }
    </div>
</div>
