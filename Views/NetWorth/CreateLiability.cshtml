@model Liability
@{
    ViewData["Title"] = "Add Liability";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle me-2 text-danger"></i>Add New Liability</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateLiability" method="post">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="Name" class="form-label">Liability Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Credit Card, Car Loan, Mortgage" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label">Amount Owed *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="InterestRate" class="form-label">Interest Rate (%)</label>
                            <div class="input-group">
                                <input asp-for="InterestRate" class="form-control" type="number" step="0.01" min="0" max="100" placeholder="0.00" />
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MinimumPayment" class="form-label">Minimum Payment</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MinimumPayment" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DueDate" class="form-label">Due Date</label>
                            <input asp-for="DueDate" class="form-control" type="date" />
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Optional notes..."></textarea>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-check-lg me-1"></i>Add Liability
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
