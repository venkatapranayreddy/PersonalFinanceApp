@model Asset
@{
    ViewData["Title"] = "Add Asset";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle me-2 text-success"></i>Add New Asset</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateAsset" method="post">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label asp-for="Name" class="form-label">Asset Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Savings Account, 401(k), House" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Value" class="form-label">Current Value *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Value" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Type" class="form-label">Asset Type *</label>
                            <select asp-for="Type" asp-items="ViewBag.AssetTypes" class="form-select">
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="AsOfDate" class="form-label">Value As Of</label>
                            <input asp-for="AsOfDate" class="form-control" type="date" />
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Optional notes..."></textarea>
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-1"></i>Add Asset
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
